{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Yellow",
  "version": "0.1.0",
  "identifier": "org.libersoft.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun ./build.js",
    "frontendDist": "../../yellow-client/build-tauri"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Yellow",
        "width": 1024,
        "height": 1000,
        "zoomHotkeysEnabled": true,
        "center": true,
        "label": "main"
      },
      {
        "title": "Yellow Notifications",
        "create": false,
        "width": 400,
        "height": 600,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "transparent": true,
        "label": "notifications",
        "url": "/notifications"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
