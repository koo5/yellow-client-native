{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:webview:allow-set-webview-zoom",
    "window:create",
    "window:close",
    "window:position",
    "window:center",
    "window:set-always-on-top",
    "window:set-decorations",
    "window:set-skip-taskbar",
    "window:set-size",
    "window:set-position",
    "event:emit",
    "event:listen",
    "monitor:all"
  ]
}
